<% extend('layout') %>
 
<form action="/auth/login" method="post">
    <h2 class="mb-3 modal-title ">Login Form</h2>
    <% if (errors) { %>
      <div class="alert alert-danger" role="alert">
        <%= errors %>
      </div>
    <% } %>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" <% if(formValues) {%> value="<%= formValues.email %>" <% } %>>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" <% if(formValues) {%> value="<%= formValues.password %>" <% } %>>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>